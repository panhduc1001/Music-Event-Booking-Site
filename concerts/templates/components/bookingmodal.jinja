{% from "_formhelpers.jinja" import render_field %}

<div class="modal" id="booking-modal-{{index}}" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content bg-400 tx-000">
      <button type="button" class="btn-close btn-close-white" aria-label="Close" data-bs-dismiss="modal"></button>
      <div class="modal-body">
        <div class="d-flex justify-content-center">
          <div class="p-3">
            <div class="d-flex justify-content-center">
              <h3>Book a ticket for</h3>
            </div>
            <div class="d-flex justify-content-center">
              <h3>{{event.title}}</h3>
            </div>
            <div class="d-flex justify-content-center mt-3">
              <h5>Cost per ticket: (AUD) ${{event.price}}</h5>
            </div>
            <div class="d-flex justify-content-center my-1">
              <h5>Available tickets: {{event.tickets}}</h5>
            </div>
            <form method="post">
              {{ bookingform.csrf_token }}
              {{ render_field(bookingform.event_id, type="hidden", value=event.id) }}
              {{ render_field(bookingform.price, type="hidden", value=event.price) }}
              <div class="my-4">
                {{ render_field(bookingform.tickets, type="number", class="form-control", min=1) }}
              </div>
              <div class="d-flex justify-content-center">
                {{ render_field(bookingform.submit, type="submit", class="btn bg-200 tx-000 w-75 login-button") }}
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>