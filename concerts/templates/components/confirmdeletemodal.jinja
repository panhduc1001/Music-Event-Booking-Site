{% from "_formhelpers.jinja" import render_field %}
{% import "bootstrap/wtf.html" as wtf %}

<div class="modal fade" id="delete-event-{{index}}" data-bs-keyboard="false" tabindex="-1"
  aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content bg-400 tx-000">
      <h1 class="modal-header">Delete existing event</h1>
      <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>

      <div class="modal-body">
        <p>Are you sure you want to delete this event?</p>
        <form style="display: inline" action="{{ url_for('myevents.delete', event_id=event.id) }}" method="get"
          class="row mt-3 d-flex justify-content-center">
          <button class="btn bg-200 tx-000 login-button">Confirm</button>
        </form>
      </div>
    </div>
  </div>
</div>