{% extends "base.jinja" %}

{% block content %}
<div class="page container">
  <div class="mt-3 d-flex justify-content-center">
    <h1 class="tx-400">My Events</h1>
  </div>
  <div class="row justify-content-center p-3">
    <div class="row nopadding mb-3 d-flex justify-content-center">
      <button class="btn bg-300 tx-000 btn-lg create-button nopadding shadow" type="button" data-bs-toggle="modal"
        data-bs-target="#event-editor-">
        Create event
      </button>
    </div>

    {% for index, event in events %}
    <!-- myeventsrow -->
    {% include "./components/myeventsrow.jinja" %}
    {% endfor %}
  </div>
</div>

{% set event = none %}
<!-- eventeditormodal -->
{% include "./components/eventeditormodal.jinja" %}
{% endblock content %}