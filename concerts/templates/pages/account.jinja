{% extends "base.jinja" %}
{% from "_formhelpers.jinja" import render_field %}

{% block content %}
<div class="page container">
  <div class="container my-5">
    <div class="d-flex justify-content-center">
      <div class="card p-5 shadow bg-300 tx-000">
        {% if current_user.is_authenticated %}

        <div class="d-flex justify-content-center">
          <h2>Welcome, {{current_user.username}}</h2>
        </div>
        <div class="d-flex justify-content-center mt-4">
          <p>Would you like to log out?</p>
        </div>
        <div class="d-flex justify-content-center mt-3">
          <a href="{{ url_for('auth.logout') }}">
            <button type="button" class="btn bg-200 tx-000 login-button">
              Log out
            </button>
          </a>
        </div>

        {% else %}

        <div class="d-flex justify-content-center">
          <h2>Log in</h2>
        </div>
        <div class="d-flex justify-content-center mt-4">
          <form method="post">
            {{ loginform.csrf_token }}
            <div class="">
              {{ render_field(loginform.email, type="text", class="form-control") }}
            </div>

            <div class="mt-3">
              {{ render_field(loginform.password, type="password", class="form-control") }}
            </div>

            <div class="d-flex justify-content-center mt-4">
              <button type="submit" class="btn bg-200 tx-000 login-button">
                Log in
              </button>
            </div>
          </form>
        </div>

        <div class="mt-4">
          <div class="d-flex justify-content-center">
            Don't have an account?
          </div>
          <div class="d-flex justify-content-center">
            Click&#160;<a href="{{url_for('auth.register')}}">Register</a>
          </div>
        </div>

        {% endif %}
      </div>
    </div>
  </div>
</div>
{% endblock %}