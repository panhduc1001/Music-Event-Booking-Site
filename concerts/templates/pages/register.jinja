{% extends "base.jinja" %}
{% from "_formhelpers.jinja" import render_field %}

{% block content %}
<div class="page container">
  <div class="container my-5">
    <div class="d-flex justify-content-center">
      <div class="card p-5 shadow bg-300 tx-000">
        <div class="d-flex justify-content-center">
          <h2>Register</h2>
        </div>
        <div class="d-flex justify-content-center mt-4">
          <form method="post">
            {{ registerform.csrf_token }}

            <div class="">
              {{ render_field(registerform.username, type="text", class="form-control") }}
            </div>

            <div class="mt-3">
              {{ render_field(registerform.email, type="text", class="form-control") }}
            </div>

            <div class="mt-3">
              {{ render_field(registerform.password, type="password", class="form-control") }}
            </div>

            <div class="mt-3">
              {{ render_field(registerform.confirm, type="password", class="form-control") }}
            </div>

            <div class="mt-3">
              {{ render_field(registerform.contact, type="text", class="form-control") }}
            </div>

            <div class="mt-3">
              {{ render_field(registerform.address, type="text", class="form-control") }}
            </div>

            <div class="d-flex justify-content-center mt-4">
              {{ render_field(registerform.submit, type="submit", class="btn bg-200 tx-000 login-button") }}
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock content %}